<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.fatec.aula1.interestcalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/percentage"
        android:label="@string/app_name"
        android:roundIcon="@drawable/percentage"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:theme="@style/AppTheme.FullScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="Interest Calculator" android:screenOrientation="portrait"></activity>
        <activity android:name=".ResultActivity"
            android:label="Resultado"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>